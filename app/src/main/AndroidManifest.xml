<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michaelcorral.ortimer">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.OrTimerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screens.settings.about.AboutActivity"
            android:parentActivityName=".screens.settings.SettingsActivity"/>

        <activity
            android:name=".screens.settings.SettingsActivity"
            android:parentActivityName=".screens.mainscreen.MainScreenActivity"/>

        <activity android:name=".screens.mainscreen.MainScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".services.VolumeService" />
    </application>

</manifest>